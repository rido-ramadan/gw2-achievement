<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.categories.AchievementCategoriesFragment"
    tools:showIn="@layout/activity_achievement_categories">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/mAchievementTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Achievement Title"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/mAchievementDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mAchievementTitle"
            tools:text="Achievement description here"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gridDataset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/grid_achievement"/>

</LinearLayout>
